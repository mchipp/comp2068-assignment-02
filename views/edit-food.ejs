<% include partials/header.ejs %>

<h1>Edit a food</h1>

<form method="post">
	<div class="form-group">
		<label for="food" class="col-sm-2 control-label">Food*:</label>
		<input name="food" id="food" required value="<%= food.food %>" />
	</div>
	<div class="form-group">
		<label for="servings" class="col-sm-2 control-label">Servings:</label>
		<input name="servings" id="servings" value="<%= food.servings %>" />
	</div>
	<div class="form-group">
		<label for="calories" class="col-sm-2 control-label">Calories:</label>
		<input name="calories" id="calories" value="<%= food.calories %>"/>
	</div>
	<div class="form-group">
		<label for="carbs" class="col-sm-2 control-label">Carbohydrates:</label>
		<input name="carbs" id="carbs" value="<%= food.carbs %>" />
	</div>
	<div class="form-group">
		<label for="fat" class="col-sm-2 control-label">Fat:</label>
		<input name="fat" id="fat" value="<%= food.fat %>" />
	</div>
	<div class="form-group">
		<label for="protein" class="col-sm-2 control-label">Protein:</label>
		<input name="protein" id="protein" value="<%= food.protein %>" />
	</div>
	<button class="btn btn-success col-sm-offset-2">Save</button>
</form>

<% include partials/footer.ejs %>